{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ts-node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "runtimeArgs": [
        "--transpile-only"
      ]
    }
  ]
}